global proc Power()
{
    string $field1 = `optionVar -q "firstField"`;
    string $field2 = `optionVar -q "secondField"`;
    string $textField = `optionVar -q "answerStringField"`;
    
   float $value1 = `floatField -q -value $field1`;
   float $value2 = `floatField -q -value $field2`;
   
   float $sum = pow ($value1, $value2);
   //floatField -e -value $sum;
   textField -e -text ($value1 + " to the power of " + $value2 + " is " + $sum) $textField;
   print ($value1 + " to the power of " + $value2 + " is " + $sum);
}

global proc Mean()
{
    string $field1 = `optionVar -q "firstField"`;
    string $field2 = `optionVar -q "secondField"`;
    string $field3 = `optionVar -q "thirdField"`;
    string $field4 = `optionVar -q "fourthField"`;
    string $field5 = `optionVar -q "fifthField"`;
    string $textField = `optionVar -q "answerStringField"`;
    
   float $value1 = `floatField -q -value $field1`;
   float $value2 = `floatField -q -value $field2`;
   float $value3 = `floatField -q -value $field3`;
   float $value4 = `floatField -q -value $field4`;
   float $value5 = `floatField -q -value $field5`;
   
   float $sum = $value1 + $value2 + $value3 + $value4 + $value5 / 5;
   //floatField -e -value $sum;
   textField -e -text ("The mean of these numbers is " + $sum) $textField;
   print ("The mean of these numbers is " + $sum);
}

